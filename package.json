{
  "$schema": "https://json.schemastore.org/package",
  "name": "@charlie-labs/config",
  "version": "0.0.15",
  "description": "Shared config for Charlie Lab's TypeScript projects",
  "repository": "charlie-labs/config",
  "license": "MIT",
  "author": "Riley Tomasek <riley@charlielabs.ai>",
  "type": "module",
  "main": "index.js",
  "files": [
    "config"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": "./index.js",
    "./prettier": "./config/prettier.js",
    "./prettierignore": "./config/prettierignore",
    "./tsconfig-node": "./config/tsconfig-node.json",
    "./typescript-react": "./config/tsconfig-react.json",
    "./reset.d.ts": "./config/reset.d.ts",
    "./eslint": "./config/eslint.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "fix": "eslint . --fix && prettier . --write",
    "lint": "eslint .",
    "prepublishOnly": "npm run typecheck && npm run lint",
    "test": "bun test",
    "typecheck": "tsc"
  },
  "prettier": "./config/prettier.js",
  "dependencies": {
    "@eslint/js": "^9.35.0",
    "@total-typescript/ts-reset": "^0.6.1",
    "@vitest/eslint-plugin": "^1.3.12",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-testing-library": "^7.8.0",
    "globals": "^16.4.0",
    "typescript-eslint": "^8.44.0"
  },
  "devDependencies": {
    "@types/node": "^22",
    "@types/react": "^19.1.13",
    "bun-types": "^1.2.22",
    "eslint": "^9.35.0",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "eslint": ">= 9",
    "prettier": ">= 3",
    "typescript": ">= 5"
  }
}
